generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  MENTOR
  ASSISTANT
  STUDENT
}

enum CourseLevel {
  BEGINNER
  PRE_INTERMEDIATE
  INTERMEDIATE
  UPPER_INTERMEDIATE
  ADVANCED
}

enum PaidVia {
  PAYME
  CLICK
  CASH
}

enum HomeworkSubStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ExamAnswer {
  variantA
  variantB
  variantC
  variantD
}

model User {
  id         String   @id @default(uuid())
  phone      String   @unique
  password   String
  role       UserRole @default(STUDENT)
  fullName   String
  image      String?
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())

  mentorProfile MentorProfile?
  courses       Course[]             @relation("MentorCourses")
  assigned      AssignedCourse[]
  purchased     PurchasedCourse[]
  ratings       Rating[]
  lessonViews   LessonView[]
  submissions   HomeworkSubmission[]
  examResults   ExamResult[]
  questions     Question[]
  answers       QuestionAnswer[]
  lastActivity  LastActivity?

  @@map("users")
}

model MentorProfile {
  id         String  @id @default(uuid())
  about      String?
  job        String?
  experience Int
  telegram   String?
  instagram  String?
  linkedin   String?
  facebook   String?
  github     String?
  website    String?

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CourseCategory {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  courses Course[]
}

model Course {
  id         String      @id @default(uuid())
  name       String
  about      String
  price      Decimal
  banner     String
  introVideo String?
  level      CourseLevel
  published  Boolean     @default(false)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime?
  categoryId String
  mentorId   String

  category       CourseCategory    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  mentor         User              @relation("MentorCourses", fields: [mentorId], references: [id], onDelete: Cascade)
  lastActivities LastActivity[]
  assigned       AssignedCourse[]
  purchased      PurchasedCourse[]
  ratings        Rating[]
  groups         LessonGroup[]
  questions      Question[]
}

model AssignedCourse {
  userId    String
  courseId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@id([userId, courseId])
}

model PurchasedCourse {
  userId      String
  courseId    String
  amount      Decimal?
  paidVia     PaidVia
  purchasedAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@id([userId, courseId])
}

model Rating {
  id        String   @id @default(uuid())
  rate      Int
  comment   String
  createdAt DateTime @default(now())
  userId    String
  courseId  String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model LastActivity {
  id        String   @id @default(uuid())
  url       String?
  updatedAt DateTime @default(now())
  userId    String   @unique
  courseId  String?
  groupId   String?
  lessonId  String?

  user   User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course?      @relation(fields: [courseId], references: [id])
  group  LessonGroup? @relation(fields: [groupId], references: [id])
  lesson Lesson?      @relation(fields: [lessonId], references: [id])
}

model LessonGroup {
  id        String   @id @default(uuid())
  name      String
  courseId  String
  createdAt DateTime @default(now())

  course         Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons        Lesson[]
  exams          Exam[]
  results        ExamResult[]
  lastActivities LastActivity[]
}

model Lesson {
  id        String    @id @default(uuid())
  name      String
  about     String
  videoUrl  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  groupId   String

  group          LessonGroup    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  files          LessonFile[]
  homework       Homework?
  views          LessonView[]
  lastActivities LastActivity[]
}

model LessonView {
  lessonId String
  userId   String
  view     Boolean
  lesson   Lesson  @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([lessonId, userId])
}

model LessonFile {
  id        String   @id @default(uuid())
  file      String
  note      String?
  createdAt DateTime @default(now())
  lessonId  String

  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model Homework {
  id        String    @id @default(uuid())
  task      String
  file      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  lessonId  String    @unique

  lesson      Lesson               @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  submissions HomeworkSubmission[]
}

model HomeworkSubmission {
  id         String            @id @default(uuid())
  text       String?
  file       String
  reason     String?
  status     HomeworkSubStatus @default(PENDING)
  createdAt  DateTime          @default(now())
  updatedAt  DateTime?
  homeworkId String
  userId     String

  homework Homework @relation(fields: [homeworkId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Exam {
  id            String     @id @default(uuid())
  question      String
  variantA      String
  variantB      String
  variantC      String
  variantD      String
  answer        ExamAnswer
  createdAt     DateTime   @default(now())
  lessonGroupId String

  lessonGroup LessonGroup @relation(fields: [lessonGroupId], references: [id], onDelete: Cascade)
}

model ExamResult {
  id            String   @id @default(uuid())
  passed        Boolean
  corrects      Int
  wrongs        Int
  createdAt     DateTime @default(now())
  lessonGroupId String
  userId        String

  lessonGroup LessonGroup @relation(fields: [lessonGroupId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Question {
  id        String          @id @default(uuid())
  text      String
  file      String?
  read      Boolean         @default(false)
  readAt    DateTime?
  createdAt DateTime        @default(now())
  updatedAt DateTime?
  userId    String
  courseId  String
  answer    QuestionAnswer?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model QuestionAnswer {
  id         String    @id @default(uuid())
  text       String
  file       String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?
  questionId String    @unique
  userId     String

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
